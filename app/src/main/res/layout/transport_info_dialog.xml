<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_content_wrapper">

    <TextView
        android:id="@+id/transport_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대중교통 정보"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/transport_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="경로 정보가 이곳에 표시됩니다."
        android:textSize="14sp"
        android:padding="8dp"
        android:background="@drawable/content_wrapper"/>
</LinearLayout>
